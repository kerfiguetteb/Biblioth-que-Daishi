<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
          
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav mr-auto">
                  {% if is_granted('ROLE_EMPRUNTEUR') or is_granted('ROLE_ADMIN') %}
                <li class="nav-item active">
                  <a class="nav-link" href="{{path('emprunt_index')}}">Emprunts</a>
                </li>
                  {% endif %}
                  {% if is_granted('ROLE_ADMIN') %}
                <li class="nav-item">
                  <a class="nav-link" href="{{path('livre_index')}}">Livres</a>
                </li>
               
                <li class="nav-item">
                  <a class="nav-link" href="{{path('auteur_index')}}">Auteurs</a>
                </li>

                <li class="nav-item">
                  <a class="nav-link" href="{{path('emprunteur_index')}}">Emprunteurs</a>
                </li>

                <li class="nav-item">
                  <a class="nav-link" href="{{path('genre_index')}}">Genres</a>
                </li>

                <li class="nav-item">
                  <a class="nav-link" href="{{path('user_index')}}">Utilisateurs</a>
                </li>
                  {% endif %}
              </ul>
                  {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_EMPRUNTEUR') %}
              <form class="form-inline my-2 my-lg-0">
              <button class="btn btn-outline-success my-2 my-sm-0" type="submit">
              <a class="nav-link" href="{{ path('app_logout') }}">DÃ©connexion</a>
              </button>
              </form>
                  {% else %}
              <form class="form-inline my-2 my-lg-0">
              <button class="btn btn-outline-success my-2 my-sm-0" type="submit">
              <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
              </button>
              </form>
                  {% endif %}
              {# <form class="form-inline my-2 my-lg-0">
              <button class="btn btn-outline-success my-2 my-sm-0" type="submit">
              <a class="nav-link" href="{{ path('app_login') }}">Login</a>
              </button>
              </form> #}
            </div>
          </nav>

        {% block body %}{% endblock %}
    </body>
</html>
